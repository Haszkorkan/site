      var stickyNav = function(){
      var ScrollY = $(window).scrollTop();

      if (ScrollY > NavY) {
          $('.nav-horizontal').addClass('sticky');
      } else {
          $('.nav-horizontal').removeClass('sticky');
      }
      };

